<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_audio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abhishekyadav.wificalling.audio">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/myip"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="30dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/myip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:id="@+id/enterip"
        android:hint="ENTER FRIEND IP"
        android:textAlignment="center" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/entermsg"
        android:layout_width="250dp"
        android:hint="TYPE YOUR MSG"
        android:background="@android:drawable/toast_frame" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_send"
        android:layout_alignTop="@+id/entermsg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/sendmsg"
        android:backgroundTint="@android:color/holo_green_dark" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:id="@+id/recmsg"
        android:textSize="18sp"
        android:layout_width="160dp"
        android:textAlignment="textStart"
        android:layout_below="@+id/enterip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/mysent"
        android:layout_height="wrap_content"
        android:layout_width="160dp"
        android:textAlignment="textEnd"
        android:layout_alignTop="@+id/recmsg"
        android:layout_alignRight="@+id/sendmsg"
        android:layout_alignEnd="@+id/sendmsg"
        android:textSize="18sp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_call"
        android:id="@+id/call"
        android:backgroundTint="@color/colorAccent"
        android:layout_above="@+id/sendmsg"
        android:layout_alignLeft="@+id/sendmsg"
        android:layout_alignStart="@+id/sendmsg" />
</RelativeLayout>
